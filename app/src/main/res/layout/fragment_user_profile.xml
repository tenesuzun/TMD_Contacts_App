<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userProfilePP"
            android:layout_width="152dp"
            android:layout_height="103dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/loginAppLogoDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_round_account_box_24" />

        <TextView
            android:id="@+id/userProfileFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryFirstName"
            android:importantForAutofill="no"
            android:textSize="20sp"
            android:padding="5dp"
            app:drawableEndCompat="@drawable/ic_baseline_person_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userProfilePP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userProfileSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:hint="@string/registrySurname"
            android:importantForAutofill="no"
            android:padding="5dp"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_group_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userProfilePP"
            app:layout_constraintTop_toBottomOf="@+id/userProfileFirstName" />

        <TextView
            android:id="@+id/userProfilePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/userPassword"
            android:importantForAutofill="no"
            android:padding="5dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_baseline_lock_24"
            app:layout_constraintEnd_toStartOf="@+id/userProfilePasswordAgain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileEmailAddress" />

        <TextView
            android:id="@+id/userProfilePasswordAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryPasswordAgain"
            android:importantForAutofill="no"
            android:padding="5dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_baseline_lock_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userProfilePassword"
            app:layout_constraintTop_toBottomOf="@+id/userProfileEmailAddress" />

        <TextView
            android:id="@+id/userProfileEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryEmailAddress"
            android:importantForAutofill="no"
            android:textSize="20sp"
            android:padding="5dp"
            app:drawableEndCompat="@drawable/ic_baseline_email_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfilePP" />

        <TextView
            android:id="@+id/userProfilePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryPhoneNumber"
            android:importantForAutofill="no"
            android:padding="5dp"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_phone_iphone_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfilePassword" />

        <TextView
            android:id="@+id/userProfileWorkPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryWorkPhone"
            android:importantForAutofill="no"
            android:padding="5dp"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_local_phone_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfilePhoneNumber" />

        <TextView
            android:id="@+id/userProfileHomePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryHomePhone"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_local_phone_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileWorkPhone" />

        <TextView
            android:id="@+id/userProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:ems="10"
            android:hint="@string/registryAddress"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_home_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileHomePhone" />

        <TextView
            android:id="@+id/userProfileCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:hint="@string/registryCompany"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_work_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileAddress" />

        <TextView
            android:id="@+id/userProfileWorkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:hint="@string/registryWorkTitle"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_recent_actors_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileCompany" />

        <TextView
            android:id="@+id/userProfileBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/registryBirthday"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_cake_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileWorkTitle" />

        <TextView
            android:id="@+id/userProfileNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:background="@drawable/roundbox_border"
            android:gravity="start|top"
            android:hint="@string/registryNotes"
            android:importantForAutofill="no"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_baseline_notes_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileBirthday" />

        <Button
            android:id="@+id/userProfileUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:drawableEnd="@drawable/ic_baseline_edit_24_white"
            android:padding="8dp"
            android:text="@string/updateButton"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileNotes" />

        <Button
            android:id="@+id/userProfileLogout"
            style="@style/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"
            android:padding="8dp"
            android:text="@string/userProfileLogout"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userProfileUpdate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

