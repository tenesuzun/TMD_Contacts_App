<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleGroupListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundbox_border"
    android:padding="5dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/groupPP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/loginAppLogoDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_group_24" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/groupPP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupPP"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>